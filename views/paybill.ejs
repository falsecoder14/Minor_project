<%- include('partials/header') %>

<div class="container">    
    <div class="row">
        <h1 style="text-align: center;">Welcome <%= cu.username %>, Pay Your Bill Here!</h1>
        <div style="width:30%; margin: 40px auto;">
            <form >
                <div class="form-group">
                <i>Username</i>    <input class="form-control" type="text" name="username" value="<%= cu.username %>">
                </div>
                <div class="form-group">
                <i>E-Mail Id</i>   <input class="form-control" type="text" name="emailid" value="<%= cu.emailid %>">
                </div>
                <div class="form-group">
                <i>Phone No</i>    <input class="form-control" type="text" name="phoneno" value="<%= cu.phoneno %>">
                </div>
                <div class="form-group">
                <i>Total Bill Till Now</i>    <input class="form-control" type="number" name="bill" value="1001.12">
                </div>
                <div class="form-group">
                    <label for="fname">Accepted Cards</label>
                    <div class="icon-container">
                        <i class="fa fa-cc-visa" style="color:navy;"></i>
                        <i class="fa fa-cc-amex" style="color:blue;"></i>
                        <i class="fa fa-cc-mastercard" style="color:red;"></i>
                        <i class="fa fa-cc-discover" style="color:orange;"></i>
                    </div>
                </div>
                <div class="form-group">
                    <i>Name on Number</i>    <input class="form-control" type="text" name="cardname">
                </div>
                <div class="form-group">
                    <i>Credit Card Number</i>    <input class="form-control" type="number" name="cardnumber">
                </div>
                <div class="form-group">
                    <i>Exp Month</i>    <input class="form-control" type="number" name="exm">
                </div>
                <div class="form-group">
                    <i>Exp Year</i>    <input class="form-control" type="number" name="exy">
                </div>
                <div class="form-group">
                    <i>CVV</i>    <input class="form-control" type="number" name="cvv">
                </div>
                <div class="form-group">
                    <button onclick="f()" class="btn btn-lg btn-primary btn-block">Pay Now</button>
                </div>               
            </form>
        </div>
    </div>
    <script>
        function f()
        {
            alert('Thanks for the payment');
        }
    </script>
</div>

<%- include('partials/footer') %>