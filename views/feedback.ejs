<%- include('partials/header') %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create Your Account Here!</h1>
        <div style="width:30%; margin: 40px auto;">
            <form>
                <div class="form-group">
                <i>Username</i>    <input class="form-control" type="text" name="username" placeholder="<%= cu.username %>">
                </div>
                <div class="form-group">
                <i>E-Mail Id</i>    <input class="form-control" type="text" name="emailid" placeholder="<%= cu.emailid %>">
                </div>
                <div class="form-group">
                <i>Phone No</i>    <input class="form-control" type="text" name="phoneno" placeholder="<%= cu.phoneno %>">
                </div>
                <div class="form-group">
                <i>Enter Feedback</i> <textarea class="form-control" row="5"></textarea>
                </div>
                <div class="form-group">
                    <button onclick="fun()" class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>               
            </form>
        </div>
    </div>
    <script>
        function fun(){
            alert('Thanks for your feedback');
        }
    </script>
</div>

<%- include('partials/footer') %>